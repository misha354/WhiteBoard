@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using System;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="Content/bootstrap.min.css" rel="stylesheet">
    <title>WhiteBoard</title>
</head>
<body>
    <nav class="navbar navbar-inverse " role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">WhiteBoard</a>
            </div>

            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li 
                        @if (Html.RenderContext.Context.Request.Path.Trim() == "/")
                        { 
                            @Html.Raw("class='active'");
                        }>
                        <a href="/">Grades</a>
                    </li>
                    <li 
                        @if (Html.RenderContext.Context.Request.Path.Trim() == "/Summary")
                        {
                            @Html.Raw("class='active'");
                        }>
                        <a href="/Summary">Summary</a>
                    </li>

                    <li @if (Html.RenderContext.Context.Request.Path.Trim() == "/About") { @Html.Raw("class='active'") ; }>
                        <a href="/About">About</a>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
